@model IEnumerable<NHAMIS.APP.Models.Nomination>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">VIEW NOMINATION DETAILS</h3>
    </div>
    <div class="box-body">
        <div class="form-group">
            <div class="col-md-12">
                <br />
                @Html.ActionLink("Add Nomination", "Create", null, htmlAttributes: new { @class = "btn btn-success pull-right" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <label class="control-label">Nominating Body</label>
                @Html.DropDownList("NominatingBodyId", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-5">
                <label class="control-label">Nomination Period</label>
                @Html.DropDownList("NominationPeriodId", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                <br />
                <input type="button" name="searchapproval" value="Search Nominations" class="btn btn-info" />
                <br /><br />
            </div>
        </div>

        <div class="col-md-12">
            <table id="nominationAddIndex" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Salutation</th>
                        <th>ID Number</th>
                        <th>Surname</th>
                        <th>Other Names</th>
                        <th>Nationality</th>
                        <th>County of Birth</th>
                        <th>Ward</th>
                        <th>Email Address</th>
                        <th>Occupation</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salutation.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OtherNames)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nationality)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountyOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ward.WardName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Occupation.Name)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Salutation</th>
                        <th>ID Number</th>
                        <th>Surname</th>
                        <th>Other Names</th>
                        <th>Nationality</th>
                        <th>County of Birth</th>
                        <th>Ward</th>
                        <th>Email Address</th>
                        <th>Occupation</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#nominationAddIndex').DataTable();
    });
</script>